<?xml version="1.0" encoding="UTF-8"?>
<Context path="">
    <Resource
            auth="Container"
            driverClassName="org.postgresql.Driver"
            maxIdle="4"
            maxTotal="8"
            maxWaitMillis="30000"
            name="jdbc/exampleDB"
            password="${RDS_PASSWORD}"
            type="javax.sql.DataSource"
            url="jdbc:postgresql://${RDS_HOSTNAME}:${RDS_PORT}/${RDS_DB_NAME}"
            username="${RDS_USERNAME}"
            initialSize="1"
    />
</Context>
